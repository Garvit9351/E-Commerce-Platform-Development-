<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <%- include("./partials/head") %>
    <title>Homepage</title>
    <%- include("./partials/footerstyle") %>
    
</head>
<body>
    <%- include("./partials/nav") %>
    <%- include("./partials/carousel") %>
</div>
    <div class="card-group container mt-4 row flex-wrap">
        <% products.forEach(product => { %>
            <div class="mt-3 col">
            <div class="card col" style="width: 15.8rem; height: 410px;">
                <img src="<%= product.coverImageURL  %>" class="card-img-top" style="width: 250px; height: 200px;" />
                <div class="card-body">
                  <p class="card-title"><%= product.tag %></p>
                  <h6 class="card-title"><strong><%= product.productName %></strong></h6>
                  <h6 class="card-title"><%= product.color %></h6>
                  <h6 class="card-title"><i class="fa-solid fa-indian-rupee-sign"></i><%= product.price %></h6>
                  <a href="/product/<%= product._id %>" class="btn btn-primary">View</a>
                </div>
              </div>
            </div>
        <% }) %>
    </div>
    <%- include("./partials/footer") %>
    <%- include("./partials/scripts") %>
</body>
</html>