<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
        <title>Update Profile</title>
</head>

<body>
    <%- include("./partials/nav") %>
    <% if (locals.user) { %>
        <div class="container mt-4">
            <form class="row g-4" action="/user/updateprofile" method="post">
                <div class="col-md-5">
                  <label for="inputEmail4" class="form-label">First Name</label>
                  <input type="text" class="form-control" id="inputEmail4" name="firstName">
                </div>
                <div class="col-md-5">
                  <label for="inputPassword4" class="form-label">Last Name</label>
                  <input type="text" class="form-control" id="inputPassword4" name="lastName">
                </div>
                <div class="col-md-5">
                    <label for="inputPassword4" class="form-label">Mobile Number</label>
                    <input type="text" class="form-control" id="inputPassword4" name="mobileNumber">
                  </div>
                  <div class="col-md-5">
                    <label for="inputState" class="form-label">Gender</label>
                    <select id="inputState" class="form-select" name="gender">
                      <option selected>Select</option>
                      <option>Male</option>
                      <option>Female</option>
                      <option>Other</option>
                    </select>
                  </div>
                
                <div class="col-md-5">
                  <label for="inputCity" class="form-label">City</label>
                  <input type="text" class="form-control" id="inputCity" name="city">
                </div>
                <div class="col-md-3">
                  <label for="inputState" class="form-label">State</label>
                  <select id="inputState" class="form-select" name="state">
                    <option selected>Select</option>
                    <option>Rajasthan</option>
                  </select>
                </div>
                <div class="col-md-2">
                  <label for="inputZip" class="form-label">Pincode</label>
                  <input type="text" class="form-control" id="inputZip" name="pincode">
                </div>
                <div class="col-md-10">
                    <label for="inputPassword4" class="form-label">Address</label>
                    <input type="text" class="form-control" id="inputPassword4" name="fullAddress">
                  </div>
                
                <div class="col-12">
                </div>
                <div class="col-12">
                  <button type="submit" class="btn btn-primary">Sign in</button>
                </div>
              </form>
        </div>
        <% } %>
        <%- include("./partials/scripts") %>
</body>

</html>